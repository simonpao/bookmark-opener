{
  "manifest_version": 3,
  "name": "SMP Bookmark Opener",
  "description": "Easily open all of your bookmarks automatically organized into groups by folder name.",
  "version": "1.0.2",
  "icons": {
    "16": "images/smp-16.png",
    "32": "images/smp-32.png",
    "48": "images/smp-48.png",
    "128": "images/smp-128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Period",
        "mac": "MacCtrl+Command+Period"
      }
    },
    "toggle-table-of-contents": {
      "suggested_key": {
        "default": "Ctrl+Period",
        "mac": "Command+Period"
      },
      "description": "Open/close table of contents",
      "global": false
    },
    "select-open": {
      "suggested_key": {
        "default": "Ctrl+Left",
        "mac": "Command+Left"
      },
      "description": "Open bookmarks in new tabs",
      "global": false
    },
    "select-copy": {
      "suggested_key": {
        "default": "Ctrl+Right",
        "mac": "Command+Right"
      },
      "description": "Copy bookmark URL to clipboard",
      "global": false
    }
  },
  "permissions": [
    "bookmarks",
    "tabGroups",
    "tabs"
  ]
}